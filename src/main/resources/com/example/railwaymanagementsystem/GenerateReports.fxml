<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.railwaymanagementsystem.controllers.GenerateReportsController"
      spacing="25" styleClass="content-area">

    <HBox alignment="CENTER_LEFT">
        <VBox>
            <Label text="Generate Reports" styleClass="title"/>
            <Label text="View analytics reports for railway operations" styleClass="subtitle"/>
        </VBox>
    </HBox>

    <!-- Report Type Selection -->
    <VBox styleClass="data-card" spacing="20">
        <Label text="Available Reports" styleClass="card-title"/>
        <Label text="Select a report to view the corresponding data analysis." styleClass="card-description"/>

        <GridPane hgap="15" vgap="15">
            <columnConstraints>
                <ColumnConstraints percentWidth="33.33"/>
                <ColumnConstraints percentWidth="33.33"/>
                <ColumnConstraints percentWidth="33.33"/>
            </columnConstraints>

            <VBox styleClass="role-card" spacing="10" GridPane.columnIndex="0">
                <Label text="ðŸ“Š Revenue Report" styleClass="role-title"/>
                <Label text="View a summary of total revenue from confirmed bookings." styleClass="role-description" wrapText="true"/>
                <Button text="View Report" styleClass="primary-button" maxWidth="Infinity"
                        onAction="#handleRevenueReport"/>
            </VBox>

            <VBox styleClass="role-card" spacing="10" GridPane.columnIndex="1">
                <Label text="ðŸ‘¥ User Activity" styleClass="role-title"/>
                <Label text="See a list of all users and their total number of bookings." styleClass="role-description" wrapText="true"/>
                <Button text="View Report" styleClass="primary-button" maxWidth="Infinity"
                        onAction="#handleUserActivityReport"/>
            </VBox>

            <VBox styleClass="role-card" spacing="10" GridPane.columnIndex="2">
                <Label text="ðŸš‚ Train Performance" styleClass="role-title"/>
                <Label text="Analyze booking counts for each train in the system." styleClass="role-description" wrapText="true"/>
                <Button text="View Report" styleClass="primary-button" maxWidth="Infinity"
                        onAction="#handleTrainPerformanceReport"/>
            </VBox>
        </GridPane>
    </VBox>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</VBox>
